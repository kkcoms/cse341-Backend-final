        <li class="main-header__item"><a class="<%= path === '/class/admin/products' ? 'active' : ''%>"
            href="/class/admin/products">Admin
            Products</a></li>
        <% } %>
    </ul>
    <ul class="main-header__item-list">
      <% if (!isAuthenticated) { %>
        <li class="main-header__item">
          <a class="<%= path === '/class/login' ? 'active' : ''%>" href="/class/login">Login</a>
        </li>
        <li class="main-header__item">
          <a class="<%= path === '/class/signup' ? 'active' : ''%>" href="/class/signup">Signup</a>
        </li>
        <%} else { %>
          <li class="main-header__item">
            <form action="/class/logout" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit">Logout</button>
            </form>
          </li>
          <%}%>
    </ul>
  </nav>
</header>
