<div class="backdrop"></div>
<header class="main-header">
  <button id="side-menu-toggle">Menu</button>
  <nav class="main-header__nav">
    <ul class="main-header__item-list">
      <li class="main-header__item"><a class="<%= path === '/class' ? 'active' : ''%>" href="/class">Shop</a>
      </li>
      <li class="main-header__item"><a class="<%= path === '/class/products' ? 'active' : ''%>"
          href="/class/products">Products</a>
      </li>
      <% if (isAuthenticated) { %>
        <li class="main-header__item"><a class="<%= path === '/class/cart' ? 'active' : ''%>"
            href="/class/cart">Cart</a>
        </li>
        <li class="main-header__item"><a class="<%= path === '/class/orders' ? 'active' : ''%>"
            href="/class/orders">Orders</a>
