<%- include('../../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../../includes/nav.ejs') %>
      <main class="container">
        <div class="row w-100 gx-5 mt-5">
          <div class="col-12 col-md-6">
            <img class="w-100" src="<%= product.imageUrl %>" alt="<%= product.name %>">
          </div>
          <div class="col-12 col-md-6">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a class="text-success" href="<%= path %>">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                  <%= product.name %>
                </li>
              </ol>
            </nav>
            <h1>
              <%= product.name %>
            </h1>
            <p class="fs-4">
              $<%= product.price %>
            </p>
            <form action="/project1/cart/<%= product._id %>" method="POST" class="d-flex flex-row align-items-center">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="btn btn-success">Add to Cart</button>
            </form>
            <div class="mt-5">
              <h5>Product Details</h5>
              <p class="mt-4">
                <%= product.description %>
              </p>
            </div>

          </div>
        </div>
      </main>
      <%- include('../../includes/end.ejs') %>